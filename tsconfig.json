{
  "$schema": "https://www.schemastore.org/tsconfig",
  "display": "Node 24",
  "_version": "24.0.0",

  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "baseUrl": "./src",
    "paths": {
      "@app": ["app/app.ts"],
      "@utils/*": ["utils/*"],
      "@types/*": ["infra/types/*"],
      "@services/*": ["app/services/*"],
      "@schemas/*": ["app/schemas/*"],
      "@repositories/*": ["app/repositories/*"],
      "@plugins/*": ["infra/plugins/*"],
      "@tests/*": ["tests/*"],
      "@docs/*": ["docs/*"],
      "@models/*": ["app/models/*"],
      "@lib/*": ["infra/lib/*"],
      "@interfaces/*": ["app/interfaces/*"],
      "@controllers/*": ["app/http/controllers/*"],
      "@middlewares/*": ["app/http/middlewares/*"],
      "@routes/*": ["app/http/routes/*"],
      "@dtos/*": ["app/dtos/*"],
      "@config/*": ["config/*"]
    },
    "module": "nodenext",
    "target": "es2024",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": ["./src"]
}
